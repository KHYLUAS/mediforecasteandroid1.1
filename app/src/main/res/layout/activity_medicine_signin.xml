<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicine_signin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/medicinearrow"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:padding="5dp"

                android:src="@drawable/arrow1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add a Reminder"
                android:textColor="@color/primaryColor"
                android:textSize="24sp" />
        </LinearLayout>



        <TextView
            fontPath="fonts/nunito_light.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Fill the details below to add a Reminder"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:alpha="0.8"
            android:textSize="18sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Medicine Name"
            android:textSize="16dp"
            tools:ignore="MissingPrefix" />

        <EditText
            android:id="@+id/medicinename"
            fontPath="fonts/nunito_light.ttf"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_hover"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="14sp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/validationMedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name is required!"
            android:textColor="@color/red"
            android:visibility="gone"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Birthday Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Dosage Unit"
                    tools:ignore="MissingPrefix" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout2"
                   style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:hintEnabled="false"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="10"
                        android:padding="13dp"
                        android:inputType="none"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="17sp"
                        android:hint="Unit"
                        android:maxLines="1"
                        android:background="@drawable/roundback" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/validationUnType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dosage Unit is required!"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Medicine Type"
                    tools:ignore="MissingPrefix" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:hintEnabled="false"
                    android:layout_marginTop="3dp">

                    <AutoCompleteTextView
                        android:id="@+id/reminderMedicineType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="10"
                        android:padding="13dp"
                        android:inputType="none"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:hint="Type"
                        android:background="@drawable/roundback" />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/validationMedType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Type is required!"
                    android:textColor="@color/red"

                    android:visibility="gone"
                    />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            >



            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Schedule"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginVertical="6dp"
                android:layout_marginTop="2dp"
                android:text="Choose Schedule"
                android:gravity="center"
                android:background="@drawable/border_hover"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />
            <TextView
                android:id="@+id/validationSched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Dosage Unit first to proceed in schedule"
                android:textColor="@color/red"
                />
            <MultiAutoCompleteTextView
                android:id="@+id/showSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@drawable/border_hover"
                android:textSize="14sp"
                android:padding="10dp"
                android:visibility="gone"
                android:editable="false"
                />
        </LinearLayout>


        <!--            <TextView-->
        <!--                android:layout_marginLeft="3dp"-->

        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginTop="30dp"-->
        <!--                android:text="Medicine Type"-->
        <!--                tools:ignore="MissingPrefix" />-->

        <!--            <com.google.android.material.textfield.TextInputLayout-->
        <!--                android:id="@+id/textInputLayout"-->
        <!--                style="@style/CustomTextInputLayout"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:hint="Choose Medicine Type"-->
        <!--                android:layout_marginTop="20dp">-->

        <!--                    <AutoCompleteTextView-->
        <!--                        android:id="@+id/reminderMedicineType"-->
        <!--                        style="@style/CustomTextInputLayout"-->
        <!--                        android:layout_width="match_parent"-->
        <!--                        android:layout_height="wrap_content"-->
        <!--                        android:alpha="0.9"-->
        <!--                        android:inputType="none"-->
        <!--                        android:textAlignment="center"-->
        <!--                        android:textSize="17dp"-->
        <!--                        android:maxLines="1"-->
        <!--                        android:background="@drawable/roundback"/>-->
