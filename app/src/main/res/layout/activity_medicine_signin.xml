<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicine_signin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:background="@drawable/ic_add_black_24dp"-->
<!--            android:scaleType="centerCrop" />-->

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Add a Reminder"
            android:textColor="@color/primaryColor"
            android:textSize="24sp"
            tools:ignore="MissingPrefix" />

        <TextView
            fontPath="fonts/nunito_light.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Fill the details below to add a Reminder"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:alpha="0.8"
            android:textSize="18sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Medicine Name"
            android:textSize="16dp"
            tools:ignore="MissingPrefix" />

        <EditText
            android:id="@+id/medicinename"
            fontPath="fonts/nunito_light.ttf"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_hover"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="14sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_marginLeft="3dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Dosage"
            tools:ignore="MissingPrefix" />


        <EditText
        android:id="@+id/medicinedosage"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_hover"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="MissingPrefix" />

            <TextView
                android:layout_marginLeft="3dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Medicine Type"
                tools:ignore="MissingPrefix" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose Medicine Type"
                android:layout_marginTop="20dp">

                    <AutoCompleteTextView
                        android:id="@+id/reminderMedicineType"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:maxLines="1"
                        android:background="@drawable/roundback"/>
            </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginLeft="3dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Start Date"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/medicinestartdate"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_hover"
            android:padding="12dp"
            android:singleLine="true"
            android:hint="01/01/2001"
            android:textAlignment="center"
            android:textSize="19sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="End Date"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/medicineenddate"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_hover"
            android:hint="01/01/2001"
            android:padding="12dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="19sp"
            tools:ignore="MissingPrefix" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="16dp"
            android:backgroundTint="#0D174188">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- The "Every day" button with "Medicine Days" label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine Days"
                        android:textColor="@color/primaryColor"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/every_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Every day"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <!-- TextViews for individual days -->
                <LinearLayout
                    android:id="@+id/button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="7">

                    <TextView
                        android:id="@+id/dv_sunday"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="S"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/dv_monday"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"

                        android:textSize="20sp"
                        android:text="M"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/dv_tuesday"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="T"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/dv_wednesday"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="W"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/dv_thursday"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="T"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/dv_friday"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="F"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/dv_saturday"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:text="S"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>





        <TextView
            android:layout_marginLeft="3dp"
            fontPath="fonts/nunito_light.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Add an event"
            tools:ignore="MissingPrefix" />

        <EditText
            android:id="@+id/medicinevent"
            fontPath="fonts/nunito_light.ttf"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_hover"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="14sp"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonadd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/primaryColor"
            android:elevation="4dp"
            android:letterSpacing="0.1"
            android:text="add"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:rippleColor="@color/primary1"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>