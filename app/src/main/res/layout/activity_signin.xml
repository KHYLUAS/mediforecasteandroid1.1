<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".signin"
    android:background="#F5F5F5">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="20dp"
                android:text="Create your account"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:textAlignment="center"
                android:textSize="28sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/signupFname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/border_hover"
                    android:hint="First Name"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />



            </RelativeLayout>
            <TextView
                android:id="@+id/validationfname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="First Name is required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="13dp">



                <EditText
                    android:id="@+id/signupMname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/border_hover"
                    android:hint="Middle Name"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />


            </RelativeLayout>
            <TextView
                android:id="@+id/validationmname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Middle Name is required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="13dp">



                <EditText
                    android:id="@+id/signupLname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Last Name"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/validationlname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Last Name is required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    android:gravity="center_horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout2"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/select1"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp">

                        <AutoCompleteTextView
                            android:id="@+id/signupGender"
                            style="@style/CustomTextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="10"
                            android:textStyle="bold"
                            android:inputType="none"
                            android:textAlignment="center"
                            android:textSize="17sp"
                            android:maxLines="1"
                            android:background="@drawable/roundback" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/validationgender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Gender is required"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:alpha=".8"
                        android:layout_marginLeft="10dp"
                        android:textSize="17sp"
                        android:visibility="gone"/>
                </LinearLayout>
                <!-- Gender Selection Input -->



                <!-- Birthday Selection -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtview7"
                        android:layout_width="170dp"
                        android:layout_height="57dp"
                        android:alpha="10"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:background="@drawable/roundback"
                        android:hint="Birthday"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        tools:visibility="visible"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/validationbirthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Birthday is required"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:alpha=".8"
                        android:layout_marginLeft="10dp"
                        android:textSize="17sp"
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="13dp"
                android:id="@+id/textInputLayout3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select"

                >

                <AutoCompleteTextView
                    android:id="@+id/signupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:alpha="0.9"
                    android:inputType="none"

                    android:textSize="17sp"
                    android:maxLines="1"
                    android:background="@drawable/roundback"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/validationbarangay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Barangay is required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="13dp">

                <EditText
                    android:id="@+id/signupNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Contact Number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </RelativeLayout>
            <TextView
                android:id="@+id/validationnumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contact Number is required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="13dp">

                <EditText
                    android:id="@+id/signupEmail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />
                <ImageView
                    android:id="@+id/checkbox"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"

                    android:layout_marginEnd="12dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"

                    android:src="@drawable/checkemail" />

            </RelativeLayout>
            <TextView
                android:id="@+id/validationemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email Address"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="13dp">



                <EditText
                    android:id="@+id/signupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />
                <ImageView
                    android:id="@+id/passwordeyes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"

                    android:layout_marginEnd="12dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    android:src="@drawable/removeeye" />

            </RelativeLayout>
            <TextView
                android:id="@+id/validationpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Password is required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password should be"
                android:textColor="@android:color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/frameOne"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardBackgroundColor="#dcdcdc"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_check_24"
                        android:backgroundTint="@color/white"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|start"
                    android:text="At least 8 characters"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/frameTwo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardBackgroundColor="#dcdcdc"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_check_24"
                        android:backgroundTint="@color/white"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|start"
                    android:text="Minimum one uppercase"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/frameThree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardBackgroundColor="#dcdcdc"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_check_24"
                        android:backgroundTint="@color/white"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|start"
                    android:text="Minimum one lowercase"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/frameFour"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardBackgroundColor="#dcdcdc"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_check_24"
                        android:backgroundTint="@color/white"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|start"
                    android:text="Minimum one number"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/frameFive"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:cardBackgroundColor="#dcdcdc"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_check_24"
                        android:backgroundTint="@color/white"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|start"
                    android:text="Minimum one symbol"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="13dp">



                <EditText
                    android:id="@+id/signupRPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />
                <ImageView
                    android:id="@+id/passwordeyee"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"

                    android:layout_marginEnd="12dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    android:src="@drawable/removeeye" />

            </RelativeLayout>

            <TextView
                android:id="@+id/validationrpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirm Password is required"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:alpha=".8"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <CheckBox
                    android:id="@+id/signcheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I have read and accept the terms"
                    android:layout_centerVertical="true"
                    android:alpha="0.7" />


            </RelativeLayout>


            <Button
                android:id="@+id/Register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/primaryColor"
                android:elevation="4dp"
                android:letterSpacing="0.1"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:rippleColor="@color/primary1" />

            <LinearLayout
                android:layout_width="298dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:alpha="0.7"
                    android:fontFamily="sans-serif-medium"
                    android:text="Back to "
                    android:textAlignment="center"
                    android:paddingBottom="20dp"/>

                <TextView
                    android:id="@+id/signLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:alpha="0.7"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="5dp"
                    android:text="Log In"
                    android:textAlignment="center"
                    android:textColor="@color/primaryColor" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</FrameLayout>
