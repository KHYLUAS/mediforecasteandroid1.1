<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editprofile"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_button"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/arrow1" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="20dp"
                android:text="Update profile"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:textAlignment="center"
                android:textSize="28sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/prFname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/border_hover"
                    android:hint="First Name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/prMname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/border_hover"
                    android:hint="Middle Name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/prLname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Last Name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/prUsername"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/prEmail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select1"
                android:layout_marginTop="20dp">

                <AutoCompleteTextView
                    android:id="@+id/prGender"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:inputType="none"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:completionThreshold="1"
                    android:maxLines="1"
                    android:background="@drawable/roundback"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:alpha="0.7"
                    android:text="Select your Birthday"
                    android:textSize="17dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/prBirthday"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.9"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:background="@drawable/roundback"
                    android:hint="10/14/2002"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    tools:visibility="visible"
                    android:paddingTop="7dp"/>



            </LinearLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:id="@+id/textInputLayout3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select">

                <AutoCompleteTextView
                    android:id="@+id/prLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:inputType="none"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:completionThreshold="1"
                    android:background="@drawable/roundback"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/prNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/roundback"
                    android:hint="Contact Number"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </RelativeLayout>





            <Button
                android:id="@+id/prUpdate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/primaryColor"
                android:elevation="4dp"
                android:letterSpacing="0.1"
                android:text="Update"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:rippleColor="@color/primary1"
                android:layout_marginBottom="20dp"/>



        </LinearLayout>


    </ScrollView>

</ScrollView>