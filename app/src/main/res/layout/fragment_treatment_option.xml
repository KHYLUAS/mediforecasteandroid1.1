<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".TreatmentOptionFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Treatment Option"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <!-- Description TextView -->
            <TextView
                android:id="@+id/trText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="This is a very long description of the symptom that should wrap appropriately."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:background="@drawable/description_background"
                android:maxLines="10"
                android:scrollHorizontally="false"
                android:breakStrategy="simple"
                android:hyphenationFrequency="full" />

            <TextView
                android:id="@+id/prevention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Prevention"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/preventText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="This is a very long description of the symptom that should wrap appropriately."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:background="@drawable/description_background"
                android:maxLines="10"
                android:scrollHorizontally="false"
                android:breakStrategy="simple"
                android:hyphenationFrequency="full" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>