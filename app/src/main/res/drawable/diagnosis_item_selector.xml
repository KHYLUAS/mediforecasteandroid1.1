<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#EAEAEA" /> <!-- Light blue for pressed -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FEF7FF" /> <!-- White background -->
        </shape>
    </item>
</selector>
